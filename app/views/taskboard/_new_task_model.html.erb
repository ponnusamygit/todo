<!-- New task Modal -->
<div class="modal fade" id="addNewTask" tabindex="-1" role="dialog" aria-labelledby="addMyTask" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form ng-submit="createTask()">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="addMyTask">New Task</h4>
        </div>
        <div class="modal-body">
          <div class="field">
            <label for="task_name">Name</label>
            <input type="text" class="form-control" placeholder="Enter task name" id="new_task_name" ng-required='true' ng-model='new_task_name'>
          </div>
          <br>
          <div class="field">
            <label>Select Labels</label><br>
            <div class="btn-group btn-group-xs label_group" data-toggle="buttons">  
              <label ng-repeat="label in labels" ng-class="label.btn_class">    
                <input type="checkbox" name="options" value='{{label.id}}'> {{label.name}}
              </label>  
            </div> 
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button tupe='submit' class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>
