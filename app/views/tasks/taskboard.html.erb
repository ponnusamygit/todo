<div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <h5>Period <span class="glyphicon glyphicon-calendar pull-right"></span></h5>
          <ul class="nav nav-sidebar">
            <li><a href="#">Today <span class="badge pull-right">4</span></a></li>
            <li><a href="#">Tomorrow <span class="badge pull-right">1</span></a></li>
            <li><a href="#">This week <span class="badge pull-right">4</span></a></li>
            <li><a href="#">Next Week <span class="badge pull-right">6</span></a></li>
            <li><a href="#">This Month <span class="badge pull-right">10</span></a></li>
            <li><a href="#">Next Month <span class="badge pull-right">14</span></a></li>
          </ul>
		  <h5>Label <span class="glyphicon glyphicon-plus pull-right"></span></h5>
          <ul class="nav nav-sidebar">
            <li><a href="">Shopping <span class="badge pull-right">2</span></a></li>
            <li><a href="">Birtday <span class="badge pull-right">3</span></a></li>
            <li><a href="">Home <span class="badge pull-right">7</span></a></li>
            <li><a href="">Office <span class="badge pull-right">5</span></a></li>
          </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

		<div class="panel panel-primary">
	      <!-- Default panel contents -->
	      <div class="panel-heading">Upcoming Tasks <span class="glyphicon glyphicon-plus pull-right"></span></div>
	      <!-- List group -->
	      <ul class="list-group">
	        <li class="list-group-item" ng-repeat='task in tasks'>
	        	{{task.name}}
				<small class="text-muted">
					<span style="text-decoration: underline;">March 14, 2014</span> - 02:15 am
				</small>
	        	<span class="label label-default">Default</span>
				<span class="label label-primary">Primary</span>
				<span class="label label-success">Success</span>
				<span class="label label-info">Info</span>
	        	<span class="pull-right">
	        		<span class="glyphicon glyphicon-ok task-done"></span>
	        		<span class="glyphicon glyphicon-edit"></span>
	        		<span class="glyphicon glyphicon-remove task-remove" ng-click='deleteTask(task.id, $index)'></span>
	        	</span>
	        </li>
	      </ul>
	    </div>


        </div>
      </div>
    </div>